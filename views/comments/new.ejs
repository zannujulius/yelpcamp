<%- include ("../partials/header") %>
<style>
    @media (max-width: 450px){
        .header-text{
            font-size:150%;
        }
        .form{
            width:80% !important;
        }
    }
    .form{
        width:50%;
        margin:30px auto;
    }
</style>

    <div class="container p-3 shadow">
            <h1 class="text-center text-secondary header-text">Add new comment to: <%= campground.name %></h1>
            <div class="form">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control"  type="text" name="comment[text]" placeholder="text...">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-info"> Submit</button>
                    </div>
                </form>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-sm btn-block btn-outline-primary" href="/campgrounds">Go back</a>
                </div>
            </div>
           
    </div>
<%- include ("../partials/footer") %>  